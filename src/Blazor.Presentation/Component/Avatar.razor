<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <AvatarImage
                Avatar="@AvatarSrc"
                UserName="@UserName"
                Style="height:50px; width:50px;" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@UserName</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>
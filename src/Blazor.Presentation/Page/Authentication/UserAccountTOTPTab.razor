
<MudItem xs="12" sm="6">
    <MudPaper Outlined="true" Style="height: 100%">
        <MudCard Style="height: 100%">
            <MudCardMedia Image="@QrCodeImage" Style="height:250px; width:250px;" />
            <MudCardActions Class="d-flex justify-center">
                <MudButton HtmlTag="label"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.QrCode"
                           OnClick="GetQrAsync" >
                    Request New QR Code
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudPaper>
</MudItem>
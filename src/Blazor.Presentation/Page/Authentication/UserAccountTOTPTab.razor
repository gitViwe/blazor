
<MudItem sm="12">
    <MudStack AlignItems="AlignItems.Center">

        <MudImage Fluid="true"
                  Src="@QrCodeImage"
                  Width="250"
                  Height="250"
                  Alt="QRCode Image"
                  Class="rounded-lg ma-4" />

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   Class="mb-4"
                   StartIcon="@Icons.Material.Filled.QrCode"
                   OnClick="GetQrAsync">
            Request New QR Code
        </MudButton>

    </MudStack>
</MudItem>

<MudItem sm="12">
    <MudPaper Outlined="true">
        <EditForm Model="@TOTPVerifyModel" OnValidSubmit="SubmitAsync">
            <FluentValidationValidator />

            <MudCard>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12">
                            <MudTextField Label="Token"
                            @bind-Value="TOTPVerifyModel.Token"
                                          For="@(() => TOTPVerifyModel.Token)"
                                          Variant="Variant.Outlined" />
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
                <MudCardActions Class="pb-4 pl-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               Disabled="IsProcessing"
                               FullWidth="true">
                        @if (IsProcessing)
                        {
                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                            <MudText Class="ms-2">Processing</MudText>
                        }
                        else
                        {
                            <MudText>
                                Verify
                            </MudText>
                        }
                    </MudButton>
                </MudCardActions>
            </MudCard>

        </EditForm>

    </MudPaper>
</MudItem>
@inject IConfiguration configuration

<Avatar
    AvatarSrc="@AvatarSrc"
    UserName="@UserName"
    Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text);" />

<MudNavMenu Color="Color.Primary" Bordered=true>

    <MudText Typo="Typo.subtitle2"
             Color="Color.Inherit"
             Class="ml-4 my-3">
        Default Examples
    </MudText>

    <MudNavLink Match="NavLinkMatch.All"
                Href="@BlazorClient.Pages.DefaultExamples.Home"
                Icon="@Icons.Material.Filled.Home">
        Home
    </MudNavLink>

    <MudNavLink Match="NavLinkMatch.All"
                Href="@BlazorClient.Pages.DefaultExamples.Counter"
                Icon="@Icons.Material.Filled.Watch">
        Counter
    </MudNavLink>

    <MudNavLink Match="NavLinkMatch.All"
                Href="@BlazorClient.Pages.DefaultExamples.FetchData"
                Icon="@Icons.Material.Filled.DataUsage">
        Fetch data
    </MudNavLink>

    <MudText Typo="Typo.subtitle2"
             Color="Color.Inherit"
             Class="ml-4 my-3">
        API Documentation
    </MudText>

    <MudNavLink Match="NavLinkMatch.All"
                Icon="@CustomIcon.SwaggerUI"
                Href="@BlazorClient.Pages.Documentation.Swagger">
        Swagger
    </MudNavLink>

    <MudNavLink Match="NavLinkMatch.All"
                Icon="@CustomIcon.GraphQL"
                Href="@BlazorClient.Pages.Documentation.GraphQL">
        GraphQL
    </MudNavLink>

    <MudText Typo="Typo.subtitle2"
             Color="Color.Inherit"
             Class="ml-4 my-3">
        Application Security
    </MudText>

    <MudNavGroup Title="Authentication"
                 Icon="@Icons.Material.Filled.AccountBox"
                 HideExpandIcon="true">

        <MudNavLink Href="@BlazorClient.Pages.Authentication.Register"
                    Icon="@Icons.Material.Filled.Assignment">
            Register
        </MudNavLink>

        <MudNavLink Href="@BlazorClient.Pages.Authentication.Login"
                    Icon="@Icons.Material.Filled.LockOpen">
            Login
        </MudNavLink>

        <MudNavLink Href="@BlazorClient.Pages.Authentication.Account"
                    Icon="@Icons.Material.Filled.AccountCircle">
            User details
        </MudNavLink>

    </MudNavGroup>

</MudNavMenu>
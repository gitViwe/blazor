@inherits LayoutComponentBase

<!-- Use custom theme -->
<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Viwe Nkepu</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <div class="d-flex flex-column mud-width-full">
        <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px">
            <MudIcon Icon="@CustomIcon.ViweNkepu" Size="Size.Large" Style="width:100px; height:100px;" ViewBox="0 0 362.5 213" />
            @Body
        </MudPaper>
        <MudAlert Severity="Severity.Info" Class="mt-8 mud-width-full" Style="max-width:500px;">Authentication is not required, this is just a demo.</MudAlert>
    </div>
</MudContainer>

@code {
    private MudTheme _currentTheme = new DefaultTheme();
}
@page "/counter"

<PageTitle>Counter</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-5">
    <HubFloatingBlocks BlockCount="currentCount" />
    <MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
    <MudText Class="mb-4">Floating blocks: @currentCount</MudText>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Add more!</MudButton>
    <MudButton Color="Color.Secondary" Variant="Variant.Filled" @onclick="DecrementCount">Show less.</MudButton>
</MudContainer>

@code {
    // default count value
    private int currentCount = 5;

    // increment count value
    private void IncrementCount()
    {
        if (currentCount < 15)
        {
            currentCount = currentCount + 2;
        }
    }

    // decrement count value
    private void DecrementCount()
    {
        if (currentCount > 0)
        {
            currentCount--;
        }
    }
}

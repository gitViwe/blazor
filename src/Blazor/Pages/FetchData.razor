@page "/fetchdata"
@attribute [Authorize]

<PageTitle>Super Heroes</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-5">

    <MudText Typo="Typo.h3" GutterBottom="true">Super Heroes</MudText>
    <MudText Class="mb-8">Let's check out some of the planet's best</MudText>

    <HubSuperHeroTable PaginatedDataSource="(request => FetchDataManager.GetHeroesAsync(request))" />

    <MudAlert Severity="Severity.Info" Class="mt-1">We've got some filtering coming up soon, stay tuned...</MudAlert>

</MudContainer>

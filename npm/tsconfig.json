{
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "ESNext",
    "lib": ["DOM", "ES2022"],
    "skipDefaultLibCheck":  true,
    "target": "ES2022",
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ]
}